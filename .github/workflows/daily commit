name: Daily Commit

# Run workflow daily at a specific time (e.g., 7:30 AM UTC)
on:
  schedule:
    - cron: '30 7 * * *'  # runs daily at 07:30 UTC
  workflow_dispatch:       # allows manual triggering

jobs:
  commit:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Add timestamp file for commit - 23f1003064@ds.study.iitm.ac.in
        run: |
          echo "Updated on $(date)" >> daily-update.txt
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          git add daily-update.txt
          git commit -m "Daily update $(date)"
          git push
